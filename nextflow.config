trace {
  enabled = true
  file = "pipeline_stats.txt"
  fields = "task_id,\
  hash,\
  process,\
  tag,\
  status,\
  exit,\
  start,\
  container,\
  cpus,\
  time,\
  disk,\
  memory,\
  duration,\
  realtime,\
  queue,\
  %cpu,\
  %mem,\
  rss,\
  vmem,\
  rchar,\
  wchar"
}
docker.runOptions='-u $(id -u):$(id -g)'
process {
    cpus = 1
    memory = "2GB"

    errorStrategy = { task.attempt <= 7 ? "retry" : "ignore" }
    maxRetries = 7
}