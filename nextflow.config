profiles {
  standard {
    includeConfig 'base.config'
    process.executor = 'local'
    docker.runOptions='-u $(id -u):$(id -g)'
    docker.enabled = true
    process.container = 'bioinformant/ghru-assembly:1.4.3'
  }
  sanger {
    includeConfig 'base.config'
    process.container = '/lustre/scratch118/infgen/team212/au3/singularity/ghru-assembly-1.4.2.sif'
    singularity {
      enabled = true
      runOptions = '--bind /lustre --bind /nfs'
    }
    process.cpus = 1
    process.memory = '2G'
    process.executor = 'lsf'
    process.queue = 'normal'
    executor.perJobMemLimit = true
  }
  aws_batch {
    includeConfig 'base.config'
    aws {
      region = 'eu-west-2'
    }
    executor.awscli = '/home/ec2-user/miniconda3/bin/aws'
    process {
      queue = params.aws_batch_queue
      executor = 'awsbatch'
      errorStrategy = { task.attempt <= 2 ? "retry" : "ignore" }
      maxRetries = 2
    }
  }
}
