trace {
  enabled = true
  file = "pipeline_stats.txt"
  fields = "task_id,\
  hash,\
  process,\
  tag,\
  status,\
  exit,\
  start,\
  container,\
  cpus,\
  time,\
  disk,\
  memory,\
  duration,\
  realtime,\
  queue,\
  %cpu,\
  %mem,\
  rss,\
  vmem,\
  rchar,\
  wchar"
}
docker.runOptions='-u $(id -u):$(id -g)'
docker.enabled = true
process {
  cpus = 1
  memory = '2G'
  container = 'bioinformant/ghru-assembly:1.3'
}